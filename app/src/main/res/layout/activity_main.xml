<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="530dp"
        android:background="@drawable/btn_black_pingk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="532dp"
            android:background="@null"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:src="@drawable/time_logo"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="428dp"
        android:background="@drawable/logo_feeling"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent">
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="280dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/btn_pingk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" >

        <Button
            android:id="@null"
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:background="@null"
            android:text="Feeling\n레시피"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/recipe_menu"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/btn_pingk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/informbutton"
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:background="@null"
            android:text="레시피 정보"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_margin="15dp"
            android:background="@null"
            android:src="@drawable/recipe_btn"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="280dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/btn_pingk"
        android:text="레시피 정보"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="400dp"
            android:layout_marginTop="90dp"
            android:background="@null"
            android:text="기록 정보"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:layout_margin="22dp"
            android:background="@null"
            android:src="@drawable/today_bar" />

    </RelativeLayout>

    <Button
        android:id="@+id/myrbutton"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:text="나만의 레시피"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="528dp" />

</androidx.constraintlayout.widget.ConstraintLayout>